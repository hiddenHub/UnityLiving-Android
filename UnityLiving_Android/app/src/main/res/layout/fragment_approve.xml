<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/transparent_new">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:padding="20dp">


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John James"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Is waitig for your approvel"
                android:textAppearance="?android:attr/textAppearanceMedium"

                android:textColor="@color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.25dp"
                android:layout_marginBottom="@dimen/padding_ten"
                android:layout_marginTop="@dimen/padding_ten"
                android:background="@color/white" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/call"
                    android:text="9539633221"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white" />
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:layout_marginRight="@dimen/padding_five"
                        android:layout_width="wrap_content"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:layout_height="wrap_content"
                        android:src="@drawable/reject"/>
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/padding_five"
                        android:src="@drawable/pending"/>
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:layout_height="wrap_content"

                        android:src="@drawable/approve"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>